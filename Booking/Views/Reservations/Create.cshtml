@model Booking.Models.Reservation

@{
    ViewBag.Title = "Create";
}

<div class="d-flex justify-content-center" style="margin-top:100px; margin-bottom:100px;">
    <div class="card shadow-lg rounded-4" style="width: 400px;">
        <div class="card-body p-5">
            <h2 class="text-center mb-4">Резервација</h2>
            <h6 class="text-center">Соба @ViewBag.BrojSoba во хотел @ViewBag.Hotelot</h6>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12 fw-bold" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Џон" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-12 fw-bold" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", placeholder = "Доу" } })
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DateOfReservation, htmlAttributes: new { @class = "control-label col-md-12 fw-bold" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.DateOfReservation, new { htmlAttributes = new { @class = "form-control", @id = "DateOfReservation" } })
                            @Html.ValidationMessageFor(model => model.DateOfReservation, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EndOfReservation, htmlAttributes: new { @class = "control-label col-md-12 fw-bold" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.EndOfReservation, new { htmlAttributes = new { @class = "form-control", @id = "EndOfReservation" } })
                            @Html.ValidationMessageFor(model => model.EndOfReservation, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display: none">
                        @Html.LabelFor(model => model.RoomId, "RoomId", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.DropDownList("RoomId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RoomId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(model => model.TotalPrice, htmlAttributes: new { @class = "control-label col-md-12 fw-bold", style = "color: #1E90FF;" })
                        <div class="col-md-12">
                            <input type="text" id="totalPrice" class="form-control" readonly style = "color: #1E90FF;" /> 
                            <input type="hidden" id="RoomPrice" value="@ViewBag.RoomPrice" />
                        </div>
                    </div>
                    <hr />

                    <br />
                    <div class="form-group">
                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Креирај" id="kreiraj" class="btn btn-success px-4" /> &nbsp;&nbsp;
                            @Html.ActionLink("Откажи", "Index", "Rooms", null, new { @class = "btn btn-secondary px-4" })
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>



@section scripts{
    <script>
        $(document).ready(function () {
            function calculateTotalPrice() {
                var startDate = new Date($("#DateOfReservation").val());
                var endDate = new Date($("#EndOfReservation").val());
                var pricePerNight = parseInt($("#RoomPrice").val());

                if (!isNaN(startDate) && !isNaN(endDate) && endDate > startDate) {
                    var diff_ms = endDate - startDate;
                    var numDays = Math.ceil(diff_ms / (1000 * 60 * 60 * 24));
                    var total = numDays * pricePerNight;
                    $("#totalPrice").val(total + " ден.");
                } else {
                    $("#totalPrice").val("Внеси соодветни датуми!");
                }
            }
            $("#DateOfReservation, #EndOfReservation").on("change input", calculateTotalPrice);

            calculateTotalPrice(); 

        });
    </script>
    }