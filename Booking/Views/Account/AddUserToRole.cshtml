@model Booking.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<div class="d-flex justify-content-center" style="margin-top:100px; margin-bottom:100px;">
    <div class="card shadow-lg rounded-4" style="width: 400px;">
        <div class="card-body p-5">
            <h2 class="text-center mb-4">Додади улога</h2>
            @using (Html.BeginForm("AddUserToRole", "Account"))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SelectedRole)
                    @Html.DropDownListFor(m => m.SelectedRole, new SelectList(ViewBag.SiteRoles), new { @class = "form-control" })
                </div>
                <br />
                <div style="justify-content: center">
                    <button type="submit" class="btn btn-success">Зачувај</button>
                </div>
            }

        </div>
    </div>
</div>
